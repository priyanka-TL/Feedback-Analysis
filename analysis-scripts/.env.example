# Environment Configuration
# Copy this file to .env and fill in your values

# ==================== API CONFIGURATION ====================
# Gemini API keys (comma-separated for rotation)
API_KEYS=your_api_key_1,your_api_key_2,your_api_key_3

# Model configuration
MODEL_NAME=gemini-2.0-flash-exp
TEMPERATURE=0.3

# Rate limiting
MAX_RETRIES=5
INITIAL_RETRY_DELAY=2000
REQUEST_DELAY=1000
RATE_LIMIT_DELAY=60000
TOKENS_PER_MINUTE=2500000
TOKEN_BUFFER=0.85

# ==================== FILE PATHS ====================
INPUT_CSV=./input.csv
OUTPUT_CSV=./output.csv
PROGRESS_FILE=./progress.json
LOG_DIR=./logs
DEBUG_DIR=./debug
REPORTS_DIR=./reports

# Config files
QUESTIONS_CONFIG=./questions-config.json
QUESTION_COLUMNS=./question-columns.json

# ==================== PROCESSING CONFIGURATION ====================
START_ROW=0
# MAX_ROWS=100  # Uncomment to limit processing
BATCH_SIZE=10
SAVE_PROGRESS_EVERY=10
LOG_EVERY=5
DELAY_BETWEEN_ROWS=0

# Batch processing for large datasets
MAX_RESPONSES_PER_BATCH=1000
SKIP_FAILED_BATCHES=false

# ==================== COLUMN NAMES ====================
ID_COLUMN=id
DISTRICT_COLUMN=District
TIMESTAMP_COLUMN=Timestamp

# ==================== VALIDATION ====================
MIN_RESPONSE_LENGTH=3

# ==================== CATEGORIZATION ====================
INCLUDE_REASONING=true
ALLOW_NEW_CATEGORIES=false

# ==================== GRAMMAR IMPROVEMENT ====================
PRESERVE_FORMATTING=true
CREATE_BACKUP=true

# ==================== LOGGING ====================
LOG_LEVEL=info
COLORIZE_LOGS=true
